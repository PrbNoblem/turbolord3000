<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/default_list_item_padding"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:text="Test"
            android:layout_height="wrap_content"
            android:textSize="@dimen/device_name_font_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/mac_label"
            android:layout_below="@id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mac"/>

        <TextView
            android:id="@+id/device_mac"
            android:layout_toRightOf="@id/mac_label"
            android:layout_below="@id/device_name"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/device_info_margin_left"
            android:text="12312312321312"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/id_label"
            android:layout_below="@id/mac_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"/>

        <TextView
            android:id="@+id/device_id"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="12"
            android:layout_below="@id/mac_label"
            android:layout_alignLeft="@id/device_mac"
            android:layout_toRightOf="@id/id_label"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/device_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/state_font_size"
        android:layout_gravity="center_vertical|right"
        android:text="@string/off"/>

</LinearLayout>